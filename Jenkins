pipeline{
		agent any
	          stages {
	              stage('Pull') {
	                   steps{
	                      script{
	                      checkout([$class: 'GitSCM', branches: [[name: '*/master']],
	                         userRemoteConfigs: [[
	                             credentialsId: 'C1',
	                             url: 'https://github.com/KiwisAreYummy/cdproject.git']]])
	                             }
	                             }
	                             }
                stage('Build'){
	                    steps{
	                       script {
	                      		sh "sudo -S ansible-playbook Ansible/build.yml -i Ansible/inventory/host.yml -kK"
	                      }
	                      }
	                      }
	          }
}
