pipeline{
		agent any
	          stages {
	              stage('Pull') {
	                   steps{
	                      script{
	                      checkout([$class: 'GitSCM', branches: [[name: '*/master']],
	                         userRemoteConfigs: [[
	                             credentialsId: 'C1',
	                             url: 'https://github.com/KiwisAreYummy/cdproject.git']]])
	                             }
	                             }
	                             }
                stage('Build'){
	                    steps{
	                       script {
	                      		sh "ansible-playbook build.yml -i Ansible/inventory/host.yml -K"
	                      }
	                      }
	                      }
	          }
}
